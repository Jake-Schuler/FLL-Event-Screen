<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ .title }} - {{ .event_name }}</title>
    <link rel="icon" type="image/x-icon" href="/static/logo.png">

    <style>
        /* General styles */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: white;
            overflow: hidden;
            margin: 0;
        }

        #timer {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            font-size: 20vw;
        }
    </style>
</head>

<body>

    <div class="event-header" style="text-align: center; margin-top: 1rem; display: flex; flex-direction: row; align-items: center; justify-content: center;">
        <img src="/static/logo.png" alt="Event Logo" draggable="false">
        <h1>{{ .event_name }}</h1>
    </div>

    <div id="timer">
        <h1 id="timer-display">2:30</h1>
    </div>

    <div id="match">
        <h3></h3>
    </div>

    <script>
        document.body.style.backgroundColor = "#{{ .background_color }}";

        var matches = [];

        var socket = new WebSocket((location.protocol === "http:" ? "ws://" : "wss://") + location.host + "/ws");

        socket.addEventListener("open", (event) => {
            console.log("WebSocket is open now.");
        });

        socket.addEventListener("message", (event) => {
            console.log("Message from server ", event.data);
            const message = JSON.parse(event.data);
            switch (message.type) {
                case ("matches"):
                    matches = message.payload.sort((a, b) => a.match_num - b.match_num);
                    break;
                case ("set_active_match"):
                    setActiveMatch(message.payload);
                    break;
                case ("start_timer"):
                    startTimer(new Date(message.payload));
                    break;
            }
        }
        );

        socket.addEventListener("close", (event) => {
            setTimeout(() => {
                socket = new WebSocket((location.protocol === "http:" ? "ws://" : "wss://") + location.host + "/ws");
            }, 1000);
        });

        function startTimer(endTime) {
            let timeLeft = endTime - Date.now() > 0 ? Math.ceil((endTime - Date.now()) / 1000) : 0;
            const timerDisplay = document.getElementById("timer-display");

            const timerInterval = setInterval(() => {
                timeLeft = endTime - Date.now() > 0 ? Math.ceil((endTime - Date.now()) / 1000) : 0;
                const minutes = Math.floor(timeLeft / 60);
                const seconds = timeLeft % 60;
                timerDisplay.textContent = `${minutes}:${seconds < 10 ? '0' : ''}${seconds}`;
            }, 100);
        }

        function resetTimer() {
            timeLeft = 150;
            document.getElementById("timer-display").textContent = "2:30";
            document.getElementById("timer-display").style.color = "white";
            document.body.style.backgroundColor = "#{{ .background_color }}";
        }

        function setActiveMatch(matchNum) {
            const match = matches.find(m => m.match_num === matchNum);
            if (match) {
                document.getElementById("match").innerHTML = `<h2>${match.alliance_a} - ${match.alliance_a_name} vs. ${match.alliance_b} - ${match.alliance_b_name} on ${match.is_red_table ? 'ðŸ”´ Red' : 'ðŸ”µ Blue'} table</h2>`;
            }
        }

    </script>
</body>

</html>